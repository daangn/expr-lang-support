{
  "name": "expr-lang-support",
  "displayName": "Expr Lang - Syntax & Formatter",
  "description": "Syntax highlighting and formatting for Expr language (.expr files)",
  "version": "0.5.2",
  "publisher": "daangn-ml-data-platform",
  "repository": {
    "type": "git",
    "url": "https://github.com/daangn/expr-lang-support"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:expr"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "expr",
        "aliases": [
          "Expr",
          "expr"
        ],
        "extensions": [
          ".expr"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "expr",
        "scopeName": "source.expr",
        "path": "./syntaxes/expr.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "expr.format",
        "title": "Format Document",
        "category": "Expr"
      }
    ],
    "configuration": {
      "title": "Expr",
      "properties": {
        "expr.indentSize": {
          "type": "number",
          "default": 2,
          "description": "Number of spaces for indentation"
        },
        "expr.maxLineLength": {
          "type": "number",
          "default": 120,
          "description": "Maximum line length before expanding functions to multiple lines"
        },
        "expr.rainbowBrackets.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable rainbow brackets for parentheses"
        }
      }
    },
    "configurationDefaults": {
      "[expr]": {
        "editor.tokenColorCustomizations": {
          "textMateRules": [
            {
              "scope": [
                "comment.line.number-sign.expr",
                "comment.line.double-slash.expr",
                "comment.block.expr"
              ],
              "settings": {
                "foreground": "#6A9955",
                "fontStyle": "italic"
              }
            }
          ]
        },
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "daangn-ml-data-platform.expr-lang-support"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npm run build && vsce package --no-dependencies",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.19.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "expr",
    "formatter",
    "syntax",
    "highlighting"
  ],
  "author": "MinJae Kwon <mingrammer@gmail.com>",
  "license": "MIT"
}